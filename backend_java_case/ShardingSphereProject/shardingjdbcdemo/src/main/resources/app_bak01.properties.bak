



# shardingjdbc分片策略
# 配置数据源,给数据源起名称,水平分库,配置两个数据源
spring.shardingsphere.datasource.names=m1,m2 # 数据源名称，多数据源以逗号分隔

# 配置第一个数据源具体内容,包含连接池,驱动,地址,用户名和密码
spring.shardingsphere.datasource.m1.type= com.alibaba.druid.pool.DruidDataSource # 数据库连接池类名称
spring.shardingsphere.datasource.m1.driver-class-name=com.mysql.cj.jdbc.Driver # 数据库驱动类名
spring.shardingsphere.datasource.m1.username=root # 数据库用户名
spring.shardingsphere.datasource.m1.password=root# 数据库密码
spring.shardingsphere.datasource.m1.url=jdbc:mysql://localhost:3306/edu_db_1?useUnicode=true&characterEncoding=utf8&serverTimezone=GMT%2b8  # 数据库连接池的其它属性

# 配置第二个数据源具体内容,包含连接池,驱动,地址,用户名和密码
spring.shardingsphere.datasource.m2.type= com.alibaba.druid.pool.DruidDataSource # 数据库连接池类名称
spring.shardingsphere.datasource.m2.driver-class-name=com.mysql.cj.jdbc.Driver # 数据库驱动类名
spring.shardingsphere.datasource.m2.username=root # 数据库用户名
spring.shardingsphere.datasource.m2.password=root# 数据库密码
spring.shardingsphere.datasource.m2.url=jdbc:mysql://localhost:3306/edu_db_2?useUnicode=true&characterEncoding=utf8&serverTimezone=GMT%2b8  # 数据库连接池的其它属性

# 指定数据库分布情况,数据库表的分布情况
# 数据源: m1 m2 ; 表: course_1 course_2
spring.shardingsphere.sharding.tables.course.actual-data-nodes=m$.course_$->{1..2}

#指定course表里面主键的生成策略:雪花算法
spring.shardingsphere.sharding.tables.course.key-generator.column=cid
spring.shardingsphere.sharding.tables.course.key-generator.type=SNOWFLAKE

#指定表分片策略 约定cid是偶数就添加到course_1表,如果cid是奇数就添加到course_2表
spring.shardingsphere.sharding.tables.course.table-strategy.inline.sharding-column=cid
spring.shardingsphere.sharding.tables.course.table-strategy.inline.algorithm-expression=course_$->{cid % 2 + 1}

#指定数据库分片策略,约定user_id是偶数添加到m1,若是奇数就添加到m2中
#spring.shardingsphere.sharding.default-database-strategy.inline.sharding-column=user_id
#spring.shardingsphere.sharding.default-database-strategy.inline.algorithm-expression=m$->{user_id % 2 + 1}
spring.shardingsphere.sharding.tables.course.database-strategy.inline.sharding-column=user_id
spring.shardingsphere.sharding.tables.course.database-strategy.inline.algorithm-expression=m$->{user_id % 2 + 1}

# 打开SQL输出日志
spring.shardingsphere.props.sql.show=true